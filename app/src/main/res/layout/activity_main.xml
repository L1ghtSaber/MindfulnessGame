<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f01ff0"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image_IV"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#d9d9d9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="#f01ff0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.65">


            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="#88008c"
                android:text="@string/amount"
                android:textAlignment="center"
                android:textColor="#d9d9d9"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <EditText
                android:id="@+id/answer_amount_ET"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#88008c"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#d9d9d9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7" />

            <ImageView
                android:id="@+id/answer_image_IV"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#d9d9d9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

            <ImageButton
                android:id="@+id/previous_image_IB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#88008c"
                android:src="@drawable/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                android:onClick="changeLevelImage"/>

            <ImageButton
                android:id="@+id/next_image_IB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#88008c"
                android:src="@drawable/arrow"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                android:onClick="changeLevelImage"/>

            <ImageButton
                android:id="@+id/hide_IB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/it_cube_logo_background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88008c"
            android:onClick="checkAnswers"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/check"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#d9d9d9"/>

    </FrameLayout>

    <TextView
        android:id="@+id/timer_TV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="90sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
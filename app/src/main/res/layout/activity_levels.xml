                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_button8"

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LevelsActivity">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_shape"
            android:onClick="exitToMainMenu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/main_menu"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#d9d9d9"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape"
        android:gravity="center"
        android:text="@string/choose_level"
        android:textColor="#d9d9d9"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.150" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_1_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_1_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_2_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_2_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_3_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_3_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

        </TableRow>

        <TableRow>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_4_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_4_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_5_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_5_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_6_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_6_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

        </TableRow>

        <TableRow>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_7_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_7_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_8_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_8_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_9_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_9_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

        </TableRow>

        <TableRow>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/previous_ten_levels_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_shape"
                    android:rotation="270"
                    android:src="@drawable/arrow"
                    android:onClick="changeCurrentTenLevels"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_10_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@drawable/rounded_shape"/>

                <TextView
                    android:id="@+id/level_10_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/next_ten_levels_IB"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_shape"
                    android:rotation="90"
                    android:src="@drawable/arrow"
                    android:onClick="changeCurrentTenLevels"/>

            </FrameLayout>

        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889">


        <ImageButton
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_shape"
            android:onClick="chooseLevel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/choose"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#d9d9d9"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
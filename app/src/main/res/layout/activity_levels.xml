                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:text="2"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#d9d9d9"
                    android:gravity="center"/>


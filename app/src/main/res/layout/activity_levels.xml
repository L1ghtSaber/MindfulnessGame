        </TableRow>

        <TableRow>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageButton
                    android:id="@+id/level_button7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="#88008c"/>

                <TextView
                    android:id="@+id/level_number7_TV"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:text="7"

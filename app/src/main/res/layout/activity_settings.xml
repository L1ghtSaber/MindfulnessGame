<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SettingsActivity">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_shape"
            android:onClick="exitToMainMenu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/main_menu"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#d9d9d9"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/background_color"
            android:gravity="center"
            android:textColor="#d9d9d9"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <ListView
            android:id="@+id/bg_colors_LV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d9d9d9"
            android:orientation="vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/chosen_color"
            android:gravity="center"
            android:textColor="#d9d9d9"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#d9d9d9">

            <ImageView
                android:id="@+id/chosen_color_bg_IV"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/text_bg_color"
            android:gravity="center"
            android:textColor="#d9d9d9"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <ListView
            android:id="@+id/text_bg_colors_LV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#d9d9d9"
            android:orientation="vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_shape"
            android:text="@string/chosen_color"
            android:gravity="center"
            android:textColor="#d9d9d9"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#d9d9d9">

            <ImageView
                android:id="@+id/chosen_color_text_bg_IV"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_shape"
            android:onClick="saveChanges"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/save_changes"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#d9d9d9"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>